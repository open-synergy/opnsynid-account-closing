<openerp>
<data>
    <!--  Amortization Prepaid Income -->
    <record id="dashboard_tile_all_prepaid_income_amortization_draft" model="tile.tile">
        <field name="name">All Prepaid Income Amortization: Draft</field>
        <field name="sequence">15</field>
        <field name="domain">
        [
            ('state', '=', 'draft'),
        ]
        </field>
        <field name="model_id" ref="account_amortization_prepaid_income.model_account_prepaid_income_amortization" />
        <field name="action_id" ref="account_amortization_prepaid_income.account_prepaid_income_amortization_action" />
        <field name="primary_function">count</field>
        <field name="background_color">#9CADA4</field>
    </record>

    <record id="dashboard_tile_all_prepaid_income_amortization_waiting_for_approval" model="tile.tile">
        <field name="name">All Prepaid Income Amortization: Waiting For Approval</field>
        <field name="sequence">15</field>
        <field name="domain">
        [
        ('state', '=', 'confirm'),
        ]
        </field>
        <field name="model_id" ref="account_amortization_prepaid_income.model_account_prepaid_income_amortization" />
        <field name="action_id" ref="account_amortization_prepaid_income.account_prepaid_income_amortization_action" />
        <field name="primary_function">count</field>
        <field name="background_color">#9CADA4</field>
    </record>
    
    <record id="dashboard_tile_all_prepaid_income_amortization_ready_to_process" model="tile.tile">
        <field name="name">All Prepaid Income Amortization: Ready To Process</field>
        <field name="sequence">15</field>
        <field name="domain">
        [
        ('state', '=', 'approve'),
        ]
        </field>
        <field name="model_id" ref="account_amortization_prepaid_income.model_account_prepaid_income_amortization" />
        <field name="action_id" ref="account_amortization_prepaid_income.account_prepaid_income_amortization_action" />
        <field name="primary_function">count</field>
        <field name="background_color">#9CADA4</field>
    </record>
</data>
</openerp>
